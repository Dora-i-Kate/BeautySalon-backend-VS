@model BeautySalon.PresentationMVC.ViewModel.KlijentTerminiViewModel

<h2>Uredi termin</h2>

<form asp-action="UrediTermin" method="post">
    @* Prikaz grešaka validacije modela *@
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="NoviIliIzmijenjeniTermin.TerminId" />
    <input type="hidden" asp-for="NoviIliIzmijenjeniTermin.KlijentId" />

    <div class="form-group">
        <label asp-for="NoviIliIzmijenjeniTermin.DatumVrijeme" class="control-label"></label>
        <input asp-for="NoviIliIzmijenjeniTermin.DatumVrijeme" class="form-control" type="datetime-local"
               value="@Model.NoviIliIzmijenjeniTermin.DatumVrijeme.ToString("yyyy-MM-ddTHH:mm")" />
        <span asp-validation-for="NoviIliIzmijenjeniTermin.DatumVrijeme" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NoviIliIzmijenjeniTermin.ZaposlenikId" class="control-label">Zaposlenik</label>
        @* Koristite ViewBag za dosljednost i ispravan prikaz Ime + Prezime *@
        <select asp-for="NoviIliIzmijenjeniTermin.ZaposlenikId" class="form-control"
                asp-items="ViewBag.Zaposlenici"></select>
        <span asp-validation-for="NoviIliIzmijenjeniTermin.ZaposlenikId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NoviIliIzmijenjeniTermin.KomentarZaposlenika" class="control-label"></label>
        <textarea asp-for="NoviIliIzmijenjeniTermin.KomentarZaposlenika" class="form-control"></textarea>
        <span asp-validation-for="NoviIliIzmijenjeniTermin.KomentarZaposlenika" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Spremi</button>
    </div>
</form>

<div>
    <a asp-action="Detalji" asp-route-klijentId="@Model.NoviIliIzmijenjeniTermin.KlijentId">Natrag</a>
</div>