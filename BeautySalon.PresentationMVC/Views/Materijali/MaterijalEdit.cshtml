@model BeautySalon.PresentationMVC.Models.MaterijalViewModel

@{
    ViewData["Title"] = "Uredi materijal";
}

<h1>Uredi materijal</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="MaterijalId" />
    <div class="form-group">
        <label asp-for="Naziv" class="control-label"></label>
        <input asp-for="Naziv" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="MinimalnaKolicina" class="control-label"></label>
        <textarea asp-for="MinimalnaKolicina" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="TrenutnaKolicina" class="control-label"></label>
        <input asp-for="TrenutnaKolicina" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Cijena" class="control-label"></label>
        <input asp-for="Cijena" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="JedinicaMjere" class="control-label"></label>
        <input asp-for="JedinicaMjere" class="form-control" />
    </div>
    <div class="form-group">
        <select asp-for="VrstaId" class="form-control" asp-items="Model.VrsteMaterijala">
            <option value="">Odaberi vrstu materijala</option>
        </select>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Spremi promjene</button>
    <a asp-action="Index" class="btn btn-secondary">Odustani</a>
</form>

