@model BeautySalon.PresentationMVC.Models.UslugaViewModel

@{
    ViewData["Title"] = "Brisanje usluge";
}

<h1>Brisanje</h1>

<h3>Jeste li sigurni da želite obrisati ovu uslugu?</h3>
<div>
    <h4>@Model.Naziv</h4>
    <p>@Model.Opis</p>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="UslugaId" />
    <button type="submit" class="btn btn-danger">Obriši</button>
    <a asp-action="Index" class="btn btn-secondary">Odustani</a>
</form>

